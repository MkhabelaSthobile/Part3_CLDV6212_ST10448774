@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container mt-4">
    <h1>Customer Dashboard</h1>
    <p class="text-muted">Welcome to your account</p>

    <div class="list-group mt-4">
        <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">
            Browse Products
        </a>
        <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">
            View Shopping Cart
        </a>
        <a asp-controller="Order" asp-action="Index" class="list-group-item list-group-item-action">
            My Orders
        </a>
        <a asp-controller="Upload" asp-action="Index" class="list-group-item list-group-item-action">
            Upload Payment Proof
        </a>
    </div>
</div>
