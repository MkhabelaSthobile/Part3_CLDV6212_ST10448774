@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-white text-center py-4">
                <h2><i class="fas fa-check-circle fa-3x mb-3"></i></h2>
                <h3>Order Placed Successfully!</h3>
            </div>
            <div class="card-body text-center py-5">
                <h4 class="mb-4">Thank you for your order!</h4>

                @if (TempData["OrderIds"] != null)
                {
                    <div class="alert alert-info">
                        <h6><i class="fas fa-receipt"></i> Order Reference(s):</h6>
                        <p class="mb-0">
                            <code>@TempData["OrderIds"]</code>
                        </p>
                    </div>
                }

                <div class="my-4">
                    <i class="fas fa-truck fa-3x text-primary mb-3"></i>
                    <h5>What happens next?</h5>
                    <ul class="list-unstyled text-start mx-auto" style="max-width: 400px;">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Your order has been submitted for processing
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            You'll receive a confirmation notification
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Track your order status in "My Orders"
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Delivery typically takes 3-5 business days
                        </li>
                    </ul>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <a asp-controller="Order" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-list"></i> View My Orders
                    </a>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-shopping-bag"></i> Continue Shopping
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-home"></i> Go to Home
                    </a>
                </div>
            </div>
            <div class="card-footer text-center bg-light">
                <small class="text-muted">
                    <i class="fas fa-envelope"></i>
                    Need help? Contact us at <a href="mailto:support@abcretailers.com">support@abcretailers.com</a>
                </small>
            </div>
        </div>

        <!-- Payment Upload Reminder -->
        <div class="card mt-3 bg-warning text-dark">
            <div class="card-body">
                <h6><i class="fas fa-exclamation-triangle"></i> Important: Upload Proof of Payment</h6>
                <p class="mb-2">Don't forget to upload your proof of payment to complete your order.</p>
                <a asp-controller="Upload" asp-action="Index" class="btn btn-dark btn-sm">
                    <i class="fas fa-upload"></i> Upload Payment Proof
                </a>
            </div>
        </div>
    </div>
</div>